        <init-param>
            <name>contextConfigLocation</name>
            <value>/WEB-INF/context/portlet/contact-info.xml</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <portlet-info>
            <title>Contact Information</title>
            <short-title>Contact Information</short-title>
        </portlet-info>
        <portlet-preferences>
            <preference>
              <name>businessEmailRoles</name>
              <value>pags.uw-madison</value>
              <value>pags.uw-sys-madison</value>
            </preference>
            <preference>
              <name>emplidUserAttributes</name>
              <!-- the value or values here should be the user attributes providing HRS system user identifiers -->
              <value>user.login.id</value>
