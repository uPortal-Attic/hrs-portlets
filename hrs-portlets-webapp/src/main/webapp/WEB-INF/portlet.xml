        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <portlet-info>
            <title>Contact Information</title>
            <short-title>Contact Information</short-title>
        </portlet-info>
        <portlet-preferences>
            <preference>
              <name>businessEmailRoles</name>
              <value>pags.uw-madison</value>
              <value>pags.uw-sys-madison</value>
            </preference>
            <preference>
              <name>emplidUserAttributes</name>
